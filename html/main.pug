        .main__card-img
            img.main__card-picture(src=image alt="Изображение")
        .main__card-type=type
        .main__card-topic=topic
        .main__card-user
            span.main__card-author Niek Bove
            span.main__card-date Arpil 8, 2018
            span.main__card-views 3K Views
        .main__card-description choto to napisanno

